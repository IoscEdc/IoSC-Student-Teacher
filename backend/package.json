{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npm i",
    "seed": "node seedData.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration --testTimeout=10000",
    "test:integration": "node tests/integration/run-integration-tests.js",
    "test:integration:basic": "jest --testPathPatterns=attendance.integration.test.js --testTimeout=30000",
    "test:integration:bulk": "jest --testPathPatterns=attendance-bulk.integration.test.js --testTimeout=30000",
    "test:integration:analytics": "jest --testPathPatterns=attendance-analytics.integration.test.js --testTimeout=30000",
    "test:integration:workflows": "jest --testPathPatterns=attendance-workflows.integration.test.js --testTimeout=45000",
    "test:integration:performance": "jest --testPathPatterns=attendance-performance.integration.test.js --testTimeout=120000",
    "test:all": "npm run test:unit && npm run test:integration",
    "setup-database": "node scripts/setupDatabase.js",
    "setup-indexes": "node scripts/setupIndexes.js",
    "migrate": "node migrations/runMigration.js",
    "migrate:rollback": "node migrations/runMigration.js attendance_system --rollback"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "nodemailer": "^7.0.10",
    "nodemon": "^2.0.22",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "googleapis": "^164.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "redis": "^4.6.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "supertest": "^7.1.4"
  }
}
